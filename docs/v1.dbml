table user {
   id int [PK]
   name string
   email string
   phone varchar(10)
   year int
   major string
   birthday date
   experience int
   completed_shifts int
   sl_of_week int
   role_id int [ref: - role.id]
   username string
   password string
   picture image
}

table user_shift_mapping {
  id int [PK]
  user_id int [ref: < user.id]
  shift_id int [ref: - shift.id]
}

table shift {
  id int [PK]
  name string
  type int
  location string
  slots int
  day_of_week day
  start_time datetime
  description string
  primary_contact string
  primar_phone varchar(10)
}

table role {
  id int [PK]
  name string
}

table availabilities {
  id int [PK]
  user_id int [ref: > user.id]
  day day
  start_time datetime
  end_time datetime
}

table shift_log {
  id int [PK]
  description string
  type int
  shift_id int [ref: > shift.id]
}

enum day {
  Sunday
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
}
